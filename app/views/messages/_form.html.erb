<%= simple_form_for @message, remote: true  do |f| %>
  <%= f.input :name %>
  <span class="error" id="name-errro"></span>
  <%= f.input :email %>
  <span class="error" id="email-errro"></span>
  <%= f.input :phone %>
  <span class="error" id="phone-errro"></span>
  <%= f.input :content %>
  <span class="error" id="content-errro"></span>
  <%= f.button :submit, value: 'Send' %>
<% end %>
